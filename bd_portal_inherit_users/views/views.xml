<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit res.users form view: Add Purchase Access Page -->
    <record id="res_user_inherit" model="ir.ui.view">
        <field name="name">res.users.form.inherit.purchase.access</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences']" position="after">
                <page string="Purchase Access" name="purchase_access">
                    <group>
                        <group>
                            <field name="department_head"/>
                            <!-- <field name="category"/> -->
                            <field name="it_department"/>
                            <field name="admin_department"/>
                            <field name="scm_department"/>
                            <field name="finance_department"/>
                            <field name="is_ceo"/>
                        </group>
                        <group>
                            <field name="is_hto"/>
                            <field name="operation_leader"/>
                            <field name="sale_leader"/>
                            <field name="bus_dev"/>
                            <field name="sales_man"/>
                            <field name="operation_man"/>
                            <field name="requisition_access"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Inherit hr.employee form view -->
    <record id="hr_employee_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <!-- Hide existing parent_id field -->
            <xpath expr="//field[@name='parent_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- Hide existing coach_id field -->
            <xpath expr="//field[@name='coach_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- Inject custom fields after job_id -->
            <xpath expr="//field[@name='job_id']" position="after">
                <field name="parent_ids" widget="many2many_tags" string="Managers" />
                <field name="leader_id" />
                <field name="assign_team_id" domain="[('company_id', '=', company_id)]"/>
                <field name="employee_types"/>
            </xpath>


            <xpath expr="//sheet/group" position="inside">
                <group modifiers="{'invisible': [('show_employee_details', '=', False)]}">
                    <field name="service_type_id"/>
                </group>
            </xpath>

        </field>
    </record>

</odoo>
