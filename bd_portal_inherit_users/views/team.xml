<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_service_type_form" model="ir.ui.view">
        <field name="name">service.type.form</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" placeholder="e.g. BBS_Operations" />
                        </h1>
                    </div>
                    <group>
                        <field name="service_manager_ids" widget="many2many_tags" />
                        <!-- <field name="service_manager_badge_id "/> -->
                    </group>
                    <group>
                        <field name="company_id" />
                    </group>
                    <notebook>
                        <page string="Assign Teams">
                            <field name='assign_team_ids'>
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="team_leader"/>
                                    <field name="team_leader_badge_id"/>
                                    <field name="team_members" widget="many2many_tags"/>
                                    <field name="service_type_id"/>
                                    <field name="company_id"/>
                                    <field name="active"/>
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>

    </record>
    <record id="view_assign_team_form" model="ir.ui.view">
        <field name="name">assign.team.form</field>
        <field name="model">assign.team</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" placeholder="e.g. BBS_Operations" />
                        </h1>
                    </div>
                    <group>
                        <field name="team_leader" />
                        <field name="team_members" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="company_id" />
                        <field name="service_type_id"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_service_type_tree" model="ir.ui.view">
        <field name="name">service.type.tree</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="service_manager_ids" />
                <!-- <field name="service_manager_badge_id"/> -->
                <field name="company_id" />
            </tree>
        </field>
    </record>
    <record id="view_assign_team_tree" model="ir.ui.view">
        <field name="name">assign.team.tree</field>
        <field name="model">assign.team</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="team_leader" />
                <field name="team_leader_badge_id"/>
                <field name="team_members" />
                <field name="company_id" />
                <field name="service_type_id"/>
            </tree>
        </field>
    </record>
    <record id="action_sevice_type_s" model="ir.actions.act_window">
        <field name="name">Service Type</field>
        <field name="res_model">service.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_assign_team" model="ir.actions.act_window">
        <field name="name">Assign Team</field>
        <field name="res_model">assign.team</field>
        <field name="view_mode">tree,form</field>
    </record>







    <menuitem id="menu_service_management" name="Service Types" parent="hr.menu_human_resources_configuration" sequence="5"/>

    <!-- Child menu: Service Types -->
    <menuitem id="menu_service_type" name="Service Type" parent="menu_service_management" action="action_sevice_type_s" sequence="10"/>


    <!-- Child menu: Assign Teams -->
    <menuitem id="menu_assign_team" name="Assign Teams" parent="menu_service_management" action="action_assign_team" sequence="20"/>


</odoo>